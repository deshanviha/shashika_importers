<div class="row">

        <div class="col-md-2"></div>
        <div class="col-md-8">  
            <table class="table table-dark" style="width: 1200px;">
  <thead> 
    <th scope="col">Images</th>
    <th scope="col">Item Code</th>
    <th scope="col">Item Name</th>
    <th scope="col">Price</th>
    <th scope="col">Brand/Model</th>
    <th scope="col">Quantity</th>
    <th scope="col">Availability</th>
    <th scope="col">Description</th>
    <th scope="col">Respond</th>
    
  </thead>
  <tbody>


       {{#each users}}
            <tr>
<td><img style="height: 100px; width:100px;" src="http://localhost:3000/img/{{this.photo}}" class="img-circle img-responsive"></td>
                <td>{{this.item_code}}</td>
                <td>{{this.item_name}}</td>
                <td>{{this.price}}</td>
                <td>{{this.brand_model}}</td>
                <td>{{this.quantity}}</td>
                <td>{{this.availability}}</td>
                <td>{{this.description}}</td>

           
                <td>
                <a href="/editPart/{{this.item_code}}"><button class="btn btn-primary">Edit</button></a>
                <br>
                <br>
                <a href="/deletePart/{{this.item_code}}"><button class="btn btn-primary">Delete</button> </a>
                </td>

            </tr>



            {{/each}}




  </tbody>
</table>



        </div>
