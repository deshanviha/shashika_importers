<div class="container">

<div class="row">
<h2>Add Spare Parts</h2>

<div class="col-md-2"></div>
<div class="col-md-8">

    <form class="form-horizontal" method="post" action="/addSpareparts" enctype="multipart/form-data" style="padding-left: 100px;">

        <div class="form-group">
           
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label" >Item Name</label>
            <div class="col-sm-10">

                <input type="text"class="form-control" id="inputEmail3"  name="item_name" aria-required="true" required>

            </div>

        </div>

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Price</label>
            <div class="col-sm-10">

                <input type="text"class="form-control" id="inputEmail3"  name="price"aria-required="true" required>

            </div>

        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-labe1" style="margin-left: -60px;" >Brand/Model number</label>
            <div class="col-sm-10">

                <input type="text"class="form-control" id="inputEmail3"  name="brand_model"aria-required="true" style="margin-left: 110px;" required>

            </div>

        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Quantity</label>
            <div class="col-sm-10">

                <input type="text"class="form-control" id="inputEmail3"style="width: 100px;" name="quantity"aria-required="true" required>

            </div>

        </div>
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Availability</label>
            <div class="col-sm-10">

                <input type="text"class="form-control" id="inputEmail3"style="width: 100px;" name="availability"aria-required="true" required>

            </div>

        </div>


        <div class="form-group">
            <label for="inputEmail3" style="margin-left: 20px;">Description</label>
            <textarea class="form-control" id="exampleFormControlTextarea" rows="3" style="margin-left: 130px;" name="description"aria-required="true" required></textarea>
        </div>
    



         <div class="form-group">
                            <label for="mob_no" class="col-md-3 control-label" style="margin-left: -50px;">Sample Image</label>
                            <div class="col-sm-9">
                                <input class="form-control" type="file" name="uploaded_image" accept=""/>
                            </div>
                        </div>     






        <div class="group">
            <div class="col-sm-offset-2 col-sm-10">

                <button type="text" class="btn btn-success" id="addparts">ADD</button>

            </div>

        </div>

                                                  
       
    </form>


<br>
